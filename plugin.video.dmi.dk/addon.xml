<?xml version="1.0" encoding="UTF-8"?>
<addon
        id="plugin.video.dmi.dk"
        version="1.1.0"
        name="DMI TV Vejrudsigt"
        provider-name="twinther [tommy@winther.nu]">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">DMI TV weather forecast</summary>
        <summary lang="da">DMI TV Vejrudsigt</summary>
        <description lang="en">Watch the latest forecasts from DMI TV in HD</description>
        <description lang="da">Se de seneste vejrudsigter fra DMI TV i HD</description>
        <license>GPL 2.0</license>
        <platform>all</platform>
