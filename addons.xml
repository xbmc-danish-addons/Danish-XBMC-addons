<addons>
<addon id="script.module.danishaddons"
       name="Library module for Danish addons"
       version="1.0.0"
       provider-name="twinther [tommy@winther.nu]">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.module" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Library module for Danish addons</summary>
    <description lang="en">Library with reusable utility functions used by the Danish addons</description>
    <platform>all</platform>
  </extension>
</addon>

